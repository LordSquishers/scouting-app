{
  "name": "@griffins-scout/game",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/**",
    "package.json"
  ],
  "scripts": {
    "gen:game": "wireit",
    "gen:screens": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "gen:game": {
      "command": "ts-node ./scripts/generateGame.ts",
      "files": [
        "scripts/generateGame.ts",
        "game.yaml",
        "game.toml",
        "game.json"
      ],
      "output": [
        "src/game.ts"
      ]
    },
    "gen:screens": {
      "command": "ts-node ./scripts/generateScreens.ts",
      "files": [
        "scripts/generateScreens.ts",
        "screens.yaml"
      ],
      "output": [
        "src/screens.ts",
        "src/defaults.ts"
      ],
      "dependencies": [
        "gen:game"
      ]
    },
    "build": {
      "command": "rollup -c",
      "dependencies": [
        "gen:game",
        "gen:screens"
      ],
      "files": [
        "src",
        "tsconfig.json"
      ],
      "output": [
        "dist"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.1",
    "json-schema": "^0.4.0",
    "json-schema-to-zod": "^0.1.2",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-morph": "^15.1.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4",
    "yaml": "^2.1.1",
    "zod-to-json-schema": "^3.17.0"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.30.0",
    "zod": "^3.17.3"
  }
}
