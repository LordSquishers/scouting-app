{
  "name": "scouting-app-game",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsc -w",
    "gen:game": "ts-node ./scripts/generateGame.ts",
    "gen:screens": "ts-node ./scripts/generateScreens.ts",
    "build": "yarn clean && yarn gen:game && yarn gen:screens && yarn format && tsc",
    "test": "jest",
    "format": "prettier --write './src/**/*.ts' './scripts/**/*.ts'",
    "clean": "rm -rf dist && rm -rf ./src/game.ts && rm -rf ./src/screens.ts && rm -rf ./src/defaults.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "dependencies": [
        "format",
        "clean",
        "gen:game",
        "gen:screens"
      ]
    },
    "format": {
      "command": "prettier --write './src/**/*.ts' './scripts/**/*.ts'",
      "dependencies": [
        "gen"
      ]
    },
    "clean": {
      "command": "rm -rf dist && rm -rf ./src/game.ts && rm -rf ./src/screens.ts && rm -rf ./src/defaults.ts"

    }
    
  },
  "devDependencies": {
    "@types/node": "^17.0.25",
    "json-schema": "^0.4.0",
    "json-schema-to-zod": "^0.0.0-beta.0",
    "prettier": "^2.6.2",
    "ts-morph": "^14.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "wireit": "^0.2.1",
    "yaml": "^2.0.1",
    "zod-to-json-schema": "^3.11.3"
  },
  "dependencies": {
    "zod": "^3.14.4"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
