{
  "$id": "https://raw.githubusercontent.com/omagarwal25/scouting-app/main/packages/game/schemas/objectiveElement.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": ["name", "screens", "field", "label"],
  "type": "object",
  "properties": {
    "label": {
      "type": "string",
      "description": "The name of the scoring element (for app)"
    },
    "name": {
      "type": "string",
      "description": "The name of the scoring element (for internals)"
    },
    "screens": {
      "type": "array",
      "description": "The screens that this scoring element is on",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["Auto", "Teleop", "Endgame", "Postgame", "Pregame", "Info"],
        "description": "The name of the screen"
      }
    },
    "field": {
      "type": "object",
      "description": "The name of the field that this scoring element is on",
      "anyOf": [
        {
          "properties": {
            "fieldType": {
              "type": "string",
              "enum": ["Text", "Boolean"]
            }
          },

          "required": ["fieldType"]
        },
        {
          "properties": {
            "fieldType": {
              "type": "string",
              "enum": ["Numeric"]
            },
            "incrementable": {
              "type": "boolean",
              "description": "Whether the field is incrementable or not",
              "default": false
            },
            "min": {
              "type": "number",
              "description": "The minimum value of the field"
            },
            "max": {
              "type": "number",
              "description": "The maximum value of the field"
            },
            "isInteger": {
              "type": "boolean",
              "description": "Whether the field is an integer",
              "default": true
            }
          },

          "required": ["isInteger", "fieldType", "incrementable"]
        },
        {
          "properties": {
            "fieldType": {
              "type": "string",
              "enum": ["Dropdown"]
            },
            "options": {
              "minItems": 1,
              "type": "array",
              "description": "The options for the field",
              "items": {
                "type": "string",
                "description": "The name of the option"
              }
            }
          },

          "required": ["options", "fieldType"]
        }
      ]
    }
  }
}
