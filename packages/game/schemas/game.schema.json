{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/omagarwal25/scouting-app/main/packages/game/schemas/game.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "year": { "type": "integer" },
    "objectiveElements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://raw.githubusercontent.com/omagarwal25/scouting-app/main/packages/game/schemas/objectiveElement.schema.json"
      }
    },
    "allianceSize": { "type": "integer", "minimum": 2, "maximum": 3 },
    "subjectiveElements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://raw.githubusercontent.com/omagarwal25/scouting-app/main/packages/game/schemas/subjectiveElement.schema.json"
      }
    },
    "pitElements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://raw.githubusercontent.com/omagarwal25/scouting-app/main/packages/game/schemas/pitElement.schema.json"
      }
    }
  },
  "required": [
    "name",
    "description",
    "year",
    "allianceSize",
    "objectiveElements",
    "subjectiveElements"
  ]
}
