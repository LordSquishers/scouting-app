{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/omagarwal25/scouting-app/blob/turbo-repo/packages/game/schemas/game.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "year": { "type": "integer" },
    "scoringElements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://github.com/omagarwal25/scouting-app/blob/turbo-repo/packages/game/schemas/scoringElement.schema.json"
      }
    }
  },
  "required": ["name", "description", "year"]
}
