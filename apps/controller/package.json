{
  "name": "@griffins-scout/controller",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "gen:prisma": "wireit"
  },
  "wireit": {
    "gen:prisma": {
      "command": "prisma generate",
      "files": [
        "prisma/schema.prisma"
      ]
    },
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src"
      ],
      "output": [
        "dist"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "../../packages/game:build"
      ]
    },
    "start": {
      "command": "node dist/src/server.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "dist"
      ],
      "clean": "if-file-deleted"
    }
  },
  "dependencies": {
    "@griffins-scout/api": "*",
    "@griffins-scout/game": "*",
    "@prisma/client": "^4.0.0",
    "@trpc/server": "^9.25.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "prisma-trpc-generator": "^0.1.12",
    "prisma-trpc-shield-generator": "^0.0.0-rc.3",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.42",
    "prisma": "^3.15.1",
    "typescript": "^4.7.3",
    "zod-prisma": "^0.5.4"
  }
}
