{
  "name": "@griffins-scout/viewer",
  "private": true,
  "sideEffects": false,
  "version": "1.0.0",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "build:css": "wireit",
    "dev": "wireit"
  },
  "wireit": {
    "build:css": {
      "inputs": [
        "./styles/app.css",
        "app"
      ],
      "outputs": [
        "app/styles/app.css"
      ],
      "command": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css"
    },
    "dev": {
      "command": "remix dev",
      "dependencies": [
        "build:css",
        "../controller:start",
        "../../packages/game:build"
      ],
      "files": [
        "app"
      ]
    },
    "build": {
      "command": "remix build",
      "dependencies": [
        "build:css",
        "../controller:start",
        "../../packages/game:build"
      ],
      "files": [
        "app"
      ],
      "output": [
        "build"
      ]
    },
    "start": {
      "command": "remix-serve build",
      "dependencies": [
        "build:css",
        "build"
      ]
    }
  },
  "dependencies": {
    "@griffins-scout/api": "*",
    "@griffins-scout/game": "*",
    "@remix-run/node": "^1.6.3",
    "@remix-run/react": "^1.6.3",
    "@remix-run/serve": "^1.6.3",
    "@tanstack/react-table": "^8.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.3",
    "@remix-run/eslint-config": "^1.6.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
