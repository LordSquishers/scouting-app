{
  "name": "@griffins-scout/scanner",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "wireit",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview"
  },
  "wireit": {
    "dev": {
      "command": "vite --port=3001",
      "files": [
        "src/**/*.ts",
        "src/**/*.vue"
      ],
      "dependencies": [
        "../../packages/game:build"
      ]
    }
  },
  "dependencies": {
    "@griffins-scout/api": "*",
    "@griffins-scout/game": "*",
    "@trpc/client": "^9.24.0",
    "@vueuse/core": "^7.6.2",
    "mande": "^1.0.1",
    "node-fetch": "^3.2.0",
    "pinia": "^2.0.11",
    "qrcode.vue": "^3.3.3",
    "vue": "^3.2.25",
    "vue-loading-overlay": "^5.0.3",
    "vue3-qr-reader": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.18.12",
    "@vitejs/plugin-vue": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8"
  }
}
